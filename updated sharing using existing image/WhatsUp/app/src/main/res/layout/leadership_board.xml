<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/game_type"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:text="Extreme Game"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/sync_btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="0"
            android:gravity="right"
            android:background="@drawable/sync_default"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:visibility="invisible"
                app:srcCompat="@drawable/trophy" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="Score"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:background="@color/gold"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_trophy"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/first_trophy" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/first_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/first_place"
            android:layout_marginTop="8dp"
            android:background="@color/silver"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_trophy"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/second_trophy" />

            <TextView
                android:id="@+id/second_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/second_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/second_place"
            android:layout_marginTop="8dp"
            android:background="@color/bronze"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/third_trophy"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/third_trophy" />

            <TextView
                android:id="@+id/third_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/third_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/third_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fourth_badge"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/fourth_badge" />

            <TextView
                android:id="@+id/fourth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/fourth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/fourth_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fifth_badge"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/fifth_badge" />

            <TextView
                android:id="@+id/fifth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/fifth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/fifth_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/sixth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/sixth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventh_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/sixth_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/seventh_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/seventh_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eighth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/seventh_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:text="8"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/eighth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/eighth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ninth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/eighth_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/ninth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/ninth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tenth_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ninth_place"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                android:text="10"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tenth_name"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tenth_score"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>