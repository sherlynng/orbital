<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/game_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Up and Down"
        android:textStyle="bold"
        android:textSize="38dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/create_game"
        android:layout_marginLeft="250dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/game_type"
        android:background="@drawable/creategame_default"/>

    <TextView
        android:id="@+id/join_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Game:"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_below="@+id/create_game"/>

    <ListView
        android:id="@+id/game_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_text">
    </ListView>

</RelativeLayout>