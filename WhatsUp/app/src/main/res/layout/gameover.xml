<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gameover_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:gravity="center"
        android:text="Game Over!"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameover_message"
        android:layout_above="@+id/restart_btn"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/yourScore"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="yourScore"

                   />
               <TextView
                   android:id="@+id/yourScore_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/yourScore"
                   android:gravity="center"
                   android:text="yourScore_Text"

                   />

           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/yourBestScore"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="yourBestScore"

                   />
               <TextView
                   android:id="@+id/yourBestScore_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/yourBestScore"
                   android:gravity="center"
                   android:text="yourBestScore_Text"

                   />

           </RelativeLayout>

       </LinearLayout>

        <Button
            android:id="@+id/restart_btn"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:background="@drawable/circle_button"
            android:text="Restart"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_below="@id/yourScore_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/mainMenu_btn"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/circle_button_blue"
            android:text="Main Menu"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_below="@+id/restart_btn"
            android:layout_alignStart="@+id/restart_btn" />
    </RelativeLayout>




</RelativeLayout>